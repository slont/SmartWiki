<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/content_add_genre_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="net.maytry.www.smartwiki.AddGenreItemActivity"
        tools:showIn="@layout/activity_add_genre_item">

        <net.maytry.www.smartwiki.layout.AnimatingRelativeLayout
            android:id="@+id/content_genre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="net.maytry.www.smartwiki.GenreActivity"
            tools:showIn="@layout/app_bar_genre">

            <include
                android:id="@+id/menu_add_genre_item_info"
                layout="@layout/menu_add_genre_item_info"/>
        </net.maytry.www.smartwiki.layout.AnimatingRelativeLayout>
    </RelativeLayout>
</layout>